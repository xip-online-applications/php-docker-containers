root = true

[*]
indent_size = 2
end_of_line = lf
charset = utf-8
insert_final_newline = true

[Dockerfile]
ident_style = space
trim_trailing_whitespace = true

[{*.}Makefile]
indent_style = tab
trim_trailing_whitespace = true

[*.md]
ident_style = space
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_style = space
trim_trailing_whitespace = true

[*.ini]
indent_style = tab
trim_trailing_whitespace = true

[*.json]
indent_style = space
trim_trailing_whitespace = true
